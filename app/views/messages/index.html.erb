<div class="panel panel-default">
  <div class="panel-heading">
  メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.name %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="exampleInputName1" class="control-label col-sm-1">名前</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :id => "exampleInputName1",  :placeholder => "hoge hoge" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="exampleInputMessage1" class="control-label col-sm-1">内容</label>
    <div class="col-sm-10">
     <%= f.text_area :body, :class => "form-control", :id => "exampleInputMessage1", :placeholder => "内容を入力してください" %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
     <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>




