<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="exampleInputName1" class="control-label col-sm-1">名前</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :id => "exampleInputName1",  :placeholder => "hoge hoge" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="exampleInputMessage1" class="control-label col-sm-1">内容</label>
    <div class="col-sm-10">
     <%= f.text_area :body, :class => "form-control", :id => "exampleInputMessage1", :placeholder => "内容を入力してください" %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
     <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

<% end %>